int maxBottlesDrunk(int numBottles, int numExchange) {
    
    int total_drunk = numBottles;

    int empty_bottles = numBottles;

    while (empty_bottles >= numExchange) {

        
        total_drunk += 1;
        
        
        empty_bottles -= numExchange;
        
       
        empty_bottles += 1;
        
       
        numExchange += 1;
    }

    return total_drunk;
}
